snippet t "tag" b
{{#$1 $2}}
  $0${VISUAL}
{{/$1}}
endsnippet

snippet if "if" b
{{#if $1}}
  $0${VISUAL}
{{/if}}
endsnippet

snippet else "else" w
{{else}}
endsnippet

snippet comma "last comma" w
{{#unless @last}},{{/unless}}
endsnippet

snippet for "for" b
{{#each $1}}
${VISUAL}$0
{{/each}}
endsnippet
