#!/usr/bin/env bash-with-comments

# Run through 2 formatters

source bash-helpers

out=`mktemp`
out2=`mktemp`

# prettier-eslint "$@" 2>/dev/null

prettier "$@" > $out

# eslint --fix --quiet \
#   -c /home/nilsb/.vim/etc/contrib/etc/eslintrc-format.json "$out" 1>&2

eslint \
  # suppress warnings and errors
  # --quiet \
  # --debug \
  --no-color \
  --fix \
  -c $HOME/.vim/etc/contrib/etc/eslintrc-format.json \
  # -o $out2 \
  $out \
1>&2

cat "$out"
