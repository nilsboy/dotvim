#!/usr/bin/env bash-with-comments

# Run through 2 formatters to normalize first and then use the bigger variety of eslint options

source bash-helpers

out=`mktemp`

# prettier-eslint "$@" 2>/dev/null

prettier "$@" > $out

eslint \
  --quiet \
  # --debug \
  --no-color \
  --fix \
  -c $CONTRIB/eslintrc-format.json \
  $out \
1>&2

cat "$out"
